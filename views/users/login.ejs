<%- layout("/layouts/boilerplate")%>
<style>
    @media(max-width: 768px){
        .form-width {
        width: 60%;
        /* max-width: none; */
        }
    }
</style>
    <div class="row mt-3">
        <h2 class="col-6 offset-3 show-t-f-size">Wellcome to the Wanderlust</h2>
        <div class="col-6 offset-3 form-width">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <lable for="username" class="form-label label-size">Username</lable>
                <input name="username" id="username" type="text" class="form-control input-size" required>

                <!-- Password field -->
                <lable for="password" class="form-label label-size">Password</lable>
                <input name="password" id="password" type="password" class="form-control input-size" required>
                <button class="btn btn-success mt-3 btn-sm d-block d-sm-inline">login</button>
            </form>
        </div>
    </div>