<% layout("layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Create new list</h3>
        <form method="post" action="/listings" class="needs-validation" enctype = "multipart/form-data" novalidate>
            <div class="mb-3">
                <lable for="title" class="form-label">Title</lable>
                <input name="listing[title]" placeholder="Add title" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="listing[description]"  type="text" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short valid description</div>
            </div>
            <div class="mb-3">
                <lable for="image" class="form-label">Upload Image</lable>
                <input name="listing[image]" type="file" class="form-control" required>
            </div>
            <div class="mb-3">
                <lable for="price" class="form-label">Price</lable>
                <input name="listing[price]" placeholder="1500" class="form-control" required>
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <lable for="country" class="form-label">Country</lable>
                    <input name="listing[country]" placeholder="Pakistan" type="text" class="form-control" required>
                    <div class="invalid-feedback">Country name should be valid</div>
                </div>
                <div class="mb-3 col-md-4">
                    <lable for="location" class="form-label">Location</lable>
                    <input name="listing[location]" placeholder="Sialkot, Punjab" type="text" class="form-control">
                    <div class="invalid-feedback">Location should be valid</div>
                </div>
            </div>
            
            <button class="btn btn-dark add-btn mt-3">Add</button>
            <br><br>
        </form>
    </div>
</div>
